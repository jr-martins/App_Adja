<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/colorBackLight"
    android:orientation="vertical"
    android:elevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_pastor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/antonio_lisboa">
        </ImageView>

        <TextView
            android:id="@+id/text_name_pastor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nome"
            android:layout_below="@id/img_pastor"
            android:layout_alignStart="@+id/img_pastor"
            android:layout_alignLeft="@+id/img_pastor"
            android:layout_marginTop="5dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="10sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_name_historia"
            android:layout_below="@id/img_pastor"
            android:layout_marginTop="10dp"/>





        <TextView
            android:id="@+id/text_view_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_pastor"
            android:text="@string/ver_detalhes"
            android:layout_alignRight="@+id/img_pastor"
            android:layout_alignEnd="@id/img_pastor"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/colorAccent"/>


    </RelativeLayout>







</android.support.v7.widget.CardView>